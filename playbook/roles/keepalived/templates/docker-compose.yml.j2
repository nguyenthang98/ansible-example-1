version: "2.1"

services:
  keepalived:
    image: osixia/keepalived:2.0.20
    network_mode: host
    cap_add:
      - NET_ADMIN
    command: --copy-service
    volumes:
      - ./keepalived.conf:/container/service/keepalived/assets/keepalived.conf
      {% for router in keepalived.routers -%}
      - ./chck_script_{{ router.name }}.sh:/container/service/keepalived/assets/chck_script_{{ router.name }}.sh
      {%- endfor %}

